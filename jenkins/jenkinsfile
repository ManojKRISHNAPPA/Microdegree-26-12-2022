pipeline{
agent {
    label 'node-1'
}
        stages{
            stage('Build-System details'){
                steps{
                    sh '''
                    echo '"ip adress"'
                    hostname -I
                      '''
                }
            }
            stage('Build-Memory details'){
                steps{
                    sh '''
                    echo "MEMORY DETAILS"
                    du -sch *
                    '''
                }
            }
            stage('Build-CPU details'){
                steps{
                    sh '''
                    echo "CPU DETAILS"
                    lscpu | free
                    '''
                }
            }
            stage('Todays date'){
                steps{
                    sh '''
                    echo "TODAYS DATE"
                    date
                    '''
                }
            }
            stage('process command '){
                steps{
                    sh '''
                    echo "Process command"
                    ps -ef | head -3
                    '''
                }
            }

        }
}
